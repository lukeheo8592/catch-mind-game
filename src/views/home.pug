                        .color.jsColor(style="background-color: #f7d794")
                        .color.jsColor(style="background-color: #778beb")
                        .color.jsColor(style="background-color: #e77f67")
                        .color.jsColor(style="background-color: #cf6a87")
                        .color.jsColor(style="background-color: #bdc581")
                        .color.jsColor(style="background-color: #d63031")
                        .color.jsColor(style="background-color: #ffa801")
                        .color.jsColor(style="background-color: #ffd32a")
                        .color.jsColor(style="background-color: #05c46b")
                        .color.jsColor(style="background-color: #0984e3")
                        .color.jsColor(style="background-color: #3c40c6")
                        .color.jsColor(style="background-color: #00d8d6")
                        .color.jsColor(style="background-color: #cd84f1")
                        .color.jsColor(style="background-color: #fd79a8")
                        .color.jsColor(style="background-color: #fffa65")
                    .brush__container
                        i.fas.fa-brush
                        input(type="range" name="input-range" id="jsRange" class="input_range" min="1" max="10" value="4" step="0.1")
                    .buttons 
                        button#jsMode Fill
                        button#jsClear Clear
            .chat
                .player__board#jsPBoard
                ul.chat__messages#jsMessages
                form.chat__form#jsSendMsg
                    input(placeholder="Write a message", type="text")
        script.
            window.events = !{events}    
        script(src="/socket.io/socket.io.js")
        script(src="/js/main.js")